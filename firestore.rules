rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User data collection - users can only access their own data
    match /userData/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to subcollections under user data
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // App data collection - users can only access their own app data
    match /appData/{document} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Daily Entries Collection - users can only access their own daily entries
    match /daily_entries/{document} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Morning Routine Collections - allow all authenticated users for testing
    match /weightEntries/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /waterEntries/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /morningRoutineConfigs/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /dailyProgress/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Todo Collections - users can only access their own todos
    match /todos/{document} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Journal Collections - users can only access their own journal entries
    match /journal_entries/{document} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Public data that all authenticated users can read
    match /public/{document} {
      allow read: if request.auth != null;
      // Only allow writes by admin users (you can customize this)
      allow write: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}